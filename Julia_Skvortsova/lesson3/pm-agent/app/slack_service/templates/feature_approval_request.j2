{
  "blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "üí° Feature Request Requires Approval"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Reason:* {{ uncertainty_reason }}\n*Confidence:* {{ approval_confidence }}%\n*Risk Level:* {{ risk_level | title }}"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Feature Summary:*\n{{ feature_summary }}"
      }
    },
    {% if feature_description %}
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Description:*\n```{{ feature_description[:500] }}{% if feature_description|length > 500 %}...{% endif %}```"
      }
    },
    {% endif %}
    {% if competitor_analysis %}
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Competitor Analysis:*\n{{ competitor_analysis[:300] }}{% if competitor_analysis|length > 300 %}...{% endif %}"
      }
    },
    {% endif %}
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Review Details:*\n‚Ä¢ Review ID: `{{ review_id }}`\n‚Ä¢ Trace ID: `{{ langfuse_trace_id | default('N/A') }}`\n‚Ä¢ Agent: {{ agent_name | default('FeatureBot') }}"
      }
    },
    {
      "type": "actions",
      "elements": [
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "‚úÖ Approve Feature"
          },
          "style": "primary",
          "action_id": "approve",
          "value": "{{ approval_id }}"
        },
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "‚ùå Reject"
          },
          "style": "danger",
          "action_id": "reject",
          "value": "{{ approval_id }}"
        }
      ]
    }
  ]
}